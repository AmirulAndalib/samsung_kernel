		motor_pwm_active: motor_pwm_active {
			GPIO_CONFIG(PM,pm8150l_gpios,10, FUNC_PWM);
			bias-disable;
			power-source = <1>;
			output-low;
			qcom,drive-strength = <3>;
		  };
