&smd {
	isa1000_vibrator {
		status = "okay";
		compatible = "imagis,isa1000_vibrator";
		isa1000,duty_ratio = <99>;
		isa1000,gpio_en = <SEC_GPIO_REF(AP,tlmm,65) 0>;
		isa1000,motor_type = EXPAND(LINEAR_1040);

#if 7
		/* for multi-frequency */
		isa1000,multi_frequency = <7>;
#endif
		/* frequency       alert low  mid  high  0  press release (multi_freq)*/
		isa1000,frequency = <1670 1200 1500 2000 1800 2000 2000>;

#if 1
		pinctrl-names = "default";
		pinctrl-0 = <&motor_pwm_active>;
		pwms = <SEC_INTERFACE_REF(pm8150l_pwm,1) 1000000>;
#endif
	};
};
