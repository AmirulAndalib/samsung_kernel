&smd {
	sec_ap_thermistor: sec_thermistor@0 {
		compatible = "samsung,sec-thermistor";
		status = "okay";
		thermistor_name = "sec-ap-thermistor";
		id = <0>;

		io-channels = SEC_ADC(pm8150l_vadc,78);
		io-channel-names = "ap_therm";
		io-channel-ranges;
	};
};

&pm8150l_vadc {
	ap_therm {
		reg = SEC_ADC_NUM(pm8150l_vadc,78);
		label = "ap_therm";
		qcom,ratiometric;
		qcom,hw-settle-time = <200>;
		qcom,pre-scaling = <1 1>;
		qcom,decimation = <840>;
		qcom,avg-samples = <8>;
	};
};

