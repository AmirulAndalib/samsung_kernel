&smd {
	hall_ic {
		status = "okay";
		compatible = "hall_ic";
		pinctrl-names = "default";
		pinctrl-0 = <&hall_irq &certify_hall_irq>;
		hall {
			name = "hall";
			event = <0x15>;
			gpios = <SEC_GPIO_REF(AP,tlmm,107) 1>;
		};
		certify_hall {
			name = "certify_hall";
			event = <0x1b>;
			gpios = <SEC_GPIO_REF(PM,pm8150l_gpios,4) 1>;
		};
	};
};

&tlmm {
	hall_irq: hall_irq {
		GPIO_CONFIG_PUD_DRV(AP,tlmm,107, FUNC_INPUT_WAKEUP, PULL_NONE, DRV_LV1);
#if 0
		power-source = <1>;
#endif
	};
};

&pm8150l_gpios {
	certify_hall_irq: certify_hall_irq {
		GPIO_CONFIG_PUD_DRV(PM,pm8150l_gpios,4, FUNC_INPUT_WAKEUP, PULL_NONE, DRV_LV1);
#if 0
		power-source = <1>;
#endif
	};
};
